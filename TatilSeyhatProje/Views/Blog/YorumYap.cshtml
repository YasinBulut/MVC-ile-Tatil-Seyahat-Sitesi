@model TatilSeyhatProje.Models.Sınıflar.Yorum
<div class="content-form">
    <h3>Bir Yorum Yapın</h3>
<form method="post">
    <input type="text" name="BlogID" value="@ViewBag.deger" required disabled />
    <input type="text" name="KullaniciAd" placeholder="Kullanıcı Adı" required />
    <input type="text" name="Mail" placeholder="Mail Adresi" required />
    <textarea name="Yorumlar" placeholder="Yorum"></textarea>
    <input type="submit" value="YORUM YAP" />
</form>
</div>

